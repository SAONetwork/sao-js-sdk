{
  "name": "@saonetwork/kid",
  "version": "0.0.1",
  "description": "sao key did",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ./.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "yarn build:clean && yarn build:types && yarn build:js",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "format": "npx prettier --write \"src/**/*.ts\"",
    "lint": "eslint --fix --ignore-pattern \"src/**/*.test.[jt]s\" \"src/**/*.[jt]s\""
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@noble/secp256k1": "^1.7.1",
    "@saonetwork/model": "^0.0.27",
    "@saonetwork/sid": "^0.0.21",
    "fs": "^0.0.1-security",
    "jose": "^4.14.4"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.19",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.2.3",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-cli": "^29.3.1",
    "lerna": "^6.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "gitHead": "fb06c7e9a0e1eb5bf4cb3fb017cf070b5dcca01e"
}
