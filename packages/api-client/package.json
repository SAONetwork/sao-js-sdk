{
  "name": "@js-sao-did/api-client",
  "version": "0.0.2",
  "description": "sao api client",
  "author": "Not@All <well@sao.network>",
  "homepage": "",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "yarn build:clean && yarn build:types && yarn build:js",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)"
  },
  "dependencies": {
    "@js-sao-did/common": "^0.0.0",
    "axios": "1.2.0",
    "SaoNetwork-sao-client-ts": "https://github.com/rleor/sao-ts-client.git"
  },
  "jest": {
    "moduleDirectories": ["node_modules", "src"],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  }
}
